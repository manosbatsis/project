    <delete id='del' parameterType='java.lang.Long'>
        delete from r_sd_weighted_price  where id=#{id}
    </delete>

        <!-- 批量删除数据 -->
        <delete id='batchDel' parameterType='java.util.ArrayList'>
            delete from r_sd_weighted_price where id in
