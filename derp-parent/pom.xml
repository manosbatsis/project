        <module>test-derp</module>
        <module>derp-api</module>
        <module>derp-eureka</module>
        <module>derp-gateway</module>
        <module>derp-mq-autolog</module>
        <module>derp-mq-erp</module>
        <module>derp-mq-inventory</module>
